{
  "name": "athen-monorepo",
  "version": "0.0.0",
  "packageManager": "pnpm@9.4.0",
  "description": "",
  "type": "module",
  "keywords": [],
  "license": "MIT",
  "homepage": "https://github.com/estjs/athen#readme",
  "bugs": "https://github.com/estjs/athen/issues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/estjs/athen.git"
  },
  "author": "jiangxd <jiangxd2016@gmail.com>",
  "scripts": {
    "dev": "nx run-many -t=dev",
    "build": "pnpm run clean && nx run-many -t=build --verbose",
    "lint": "eslint --cache --fix \"./**/src/*.{ts,tsx,js,jsx}\"",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "typecheck": "tsc --noEmit -p ./tsconfig.build.json",
    "clean": "rimraf ./packages/**/dist",
    "changelog": "tsx scripts/changelog.ts",
    "prerelease": "pnpm run build && pnpm run lint && pnpm run test && pnpm run typecheck",
    "release": "pnpm run changelog && pnpm run prerelease &&  bumpp package.json packages/*/package.json --no-git-checks --commit --push --tag && pnpm -r publish --access public"
  },
  "devDependencies": {
    "@estjs/eslint-config": "^1.1.3",
    "@types/lodash": "^4.17.5",
    "@vitest/coverage-v8": "^2.0.0",
    "bumpp": "^9.4.1",
    "dayjs": "^1.11.11",
    "eslint": "^8.45.0",
    "nx": "19.2.1",
    "picocolors": "^1.0.1",
    "pnpm": "^9.4.0",
    "rimraf": "^5.0.7",
    "simple-git-hooks": "^2.11.1",
    "standard-changelog": "^6.0.0",
    "tsup": "^8.1.0",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged --concurrent false",
    "commit-msg": "pnpm exec tsx ./scripts/verify-commit.ts $1"
  },
  "lint-staged": {
    "package/src/*.{ts,tsx,js}": "eslint --cache --fix"
  }
}
